{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "noEmitOnError": true,

    "module": "nodenext",
    "target": "esnext",
    "types": ["node", "express", "jsonwebtoken", "nodemailer", "multer"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "api/**/*"]
}
